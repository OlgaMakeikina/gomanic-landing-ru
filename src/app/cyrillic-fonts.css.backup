/* ЦИРИЛИЧЕСКИЕ ШРИФТЫ - РЕЗЕРВНЫЕ РЕШЕНИЯ */

/* Cyrillic-friendly font stacks */
.horizon-cyrillic {
  font-family: 'Horizon', 'Druk Wide Super', 'PT Sans Caption', 'DejaVu Sans Condensed', 'Arial Black', Arial, sans-serif;
  font-feature-settings: "kern" 1, "liga" 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Для заголовков с кириллицей */
.vogue-masthead-cyrillic {
  font-family: 'Horizon', 'Druk Wide Super', 'PT Sans Caption', 'DejaVu Sans Condensed', 'Arial Black', Arial, sans-serif;
  font-size: clamp(4rem, 12vw, 12rem);
  font-weight: 900;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  line-height: 0.8;
  color: #3B3B3A;
  text-align: center;
  font-feature-settings: "kern" 1, "liga" 0;
  -webkit-font-smoothing: antialiased;
}

.vogue-headline-cyrillic {
  font-family: 'Horizon', 'Druk Wide Super', 'PT Sans Caption', 'DejaVu Sans Condensed', 'Arial Black', Arial, sans-serif;
  font-size: clamp(2.5rem, 8vw, 6rem);
  font-weight: 900;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  line-height: 0.85;
  color: #3B3B3A;
  font-feature-settings: "kern" 1, "liga" 0;
  -webkit-font-smoothing: antialiased;
}

/* Автоматическое определение языка и применение соответствующих шрифтов */
.vogue-text-adaptive {
  font-family: 'Manrope', 'PT Sans', 'DejaVu Sans', Arial, sans-serif;
}

.vogue-text-adaptive:lang(ru) {
  font-family: 'Manrope', 'PT Sans', 'DejaVu Sans', 'Times New Roman', serif;
  font-weight: 400;
}

.vogue-heading-adaptive {
  font-family: 'Horizon', 'Druk Wide Super', 'Arial Black', Arial, sans-serif;
}

.vogue-heading-adaptive:lang(ru) {
  font-family: 'Druk Wide Super', 'PT Sans Caption', 'Arial Black', Arial, sans-serif;
  font-weight: 900;
  font-stretch: condensed;
}

/* Fallback для старых браузеров */
@supports not (font-feature-settings: "kern") {
  .horizon-cyrillic,
  .vogue-masthead-cyrillic,
  .vogue-headline-cyrillic {
    text-rendering: optimizeLegibility;
  }
}

/* Классы для ручного переключения */
.use-fallback-fonts .vogue-masthead,
.use-fallback-fonts .vogue-headline,
.use-fallback-fonts .vogue-subhead,
.use-fallback-fonts .vogue-logo,
.use-fallback-fonts .vogue-number {
  font-family: 'Druk Wide Super', 'PT Sans Caption', 'Arial Black', Arial, sans-serif !important;
  font-weight: 900 !important;
}

/* Автоматическое переключение при отсутствии поддержки кириллицы */
.no-cyrillic-support .vogue-masthead,
.no-cyrillic-support .vogue-headline,
.no-cyrillic-support .vogue-subhead,
.no-cyrillic-support .vogue-logo,
.no-cyrillic-support .vogue-number {
  font-family: 'DrukWideCyr-Super', Arial, sans-serif !important;
  font-weight: normal !important;
  text-transform: uppercase !important;
  letter-spacing: 0.05em !important;
}

/* Специальный класс для мобильного меню - единообразный шрифт */
.mobile-menu-unified-font {
  font-family: 'DrukWideCyr-Super' !important;
  font-weight: normal !important;
  text-transform: uppercase !important;
  letter-spacing: 0.08em !important;
}

/* Веб-безопасные альтернативы */
.websafe-cyrillic {
  font-family: 'DrukWideCyr-Super', Arial, sans-serif;
  font-weight: normal;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

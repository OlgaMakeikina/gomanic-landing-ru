.section {
  padding: 80px 0;
  background: #FEFEFE;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.header {
  text-align: center;
  margin-bottom: 60px;
}

.overline {
  color: #444e55;
  font-family: Garet, sans-serif;
  font-size: 0.875rem;
  font-weight: 400;
  letter-spacing: 0.22em;
  text-transform: uppercase;
  opacity: 0.85;
  margin-bottom: 12px;
}

.title {
  font-size: 2rem;
  color: #444e55;
  margin-bottom: 24px;
  font-weight: 500;
  font-family: Horizon, sans-serif;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  line-height: 1.1;
  white-space: nowrap;
}

.subtitle {
  font-size: 1rem;
  color: #444e55;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
  font-family: Garet, sans-serif;
  white-space: nowrap;
}

.subtitle strong {
  font-weight: 700;
}

/* Табы с glassmorphism */
.tabsContainer {
  display: flex;
  justify-content: center;
  margin-bottom: 50px;
}

.tabs {
  display: flex;
  gap: 8px;
  padding: 8px;
  backdrop-filter: blur(20px);
  background: rgba(59, 59, 58, 0.08);
  border-radius: 20px;
  border: 1px solid rgba(59, 59, 58, 0.15);
  box-shadow: 0 20px 40px rgba(59, 59, 58, 0.1);
}

.tab {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 20px 28px;
  background: transparent;
  border: none;
  border-radius: 16px;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #3B3B3A;
  text-align: left;
  backdrop-filter: blur(10px);
}

.tab:hover {
  background: rgba(59, 59, 58, 0.12);
  box-shadow: 0 8px 24px rgba(59, 59, 58, 0.15);
}

.tabActive {
  background: rgba(68, 79, 85, 0.95) !important;
  color: #FEFEFE !important;
  box-shadow: 0 32px 64px rgba(68, 79, 85, 0.3) !important;
  border: 1px solid rgba(68, 79, 85, 1);
}

.tabNumber {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  font-family: Horizon, sans-serif;
  font-size: 1.5rem;
  font-weight: 500;
  color: #3B3B3A;
  background: rgba(59, 59, 58, 0.08);
  border: 1px solid rgba(59, 59, 58, 0.15);
  backdrop-filter: blur(10px);
  box-shadow: 0 20px 40px rgba(59, 59, 58, 0.1);
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.tabActive .tabNumber {
  color: #FEFEFE;
  background: rgba(68, 79, 85, 0.95);
  border: 1px solid rgba(68, 79, 85, 1);
  box-shadow: 0 32px 64px rgba(68, 79, 85, 0.3);
}

.tabTitle {
  font-family: Garet, sans-serif;
  font-size: 0.7rem;
  font-weight: 400;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  margin-bottom: 4px;
}

.tabSubtitle {
  font-family: Garet, sans-serif;
  font-size: 0.6rem;
  opacity: 0.7;
  line-height: 1.3;
  font-weight: 400;
}

/* Контейнер галереи */
.galleryContainer {
  min-height: 400px;
  margin-bottom: 50px;
}

/* Портфолио сетка */
.portfolioGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
}

.portfolioItem {
  position: relative;
  aspect-ratio: 1 / 1;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.portfolioImage {
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s ease;
}

.portfolioItem:hover .portfolioImage {
  transform: scale(1.05);
}

/* Antes e Depois сетка */
.beforeAfterGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  justify-items: center;
}

.beforeAfterItem {
  position: relative;
  width: 100%;
  max-width: 350px;
  aspect-ratio: 1 / 1;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.beforeAfterImage {
  object-fit: cover;
  object-position: center;
  transition: transform 0.5s ease;
}

.beforeAfterItem:hover .beforeAfterImage {
  transform: scale(1.05);
}

/* CTA блок */
.ctaContainer {
  text-align: center;
}

.ctaBox {
  display: inline-block;
  position: relative;
  backdrop-filter: blur(24px);
  border-radius: 24px;
  border: 2px solid rgba(255, 255, 255, 0.2);
  max-width: 800px;
  width: 90%;
  background: linear-gradient(135deg, #444f55 0%, rgba(68, 79, 85, 0.95) 100%);
  box-shadow: 
    0 32px 64px rgba(68, 79, 85, 0.4),
    0 8px 24px rgba(0, 0, 0, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  padding: 48px 40px;
}

.ctaGradient1 {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.03) 50%, transparent 100%);
  border-radius: 24px;
  pointer-events: none;
}

.ctaGradient2 {
  position: absolute;
  inset: 0;
  background: linear-gradient(225deg, rgba(0, 0, 0, 0.2) 0%, transparent 40%, rgba(0, 0, 0, 0.1) 100%);
  border-radius: 24px;
  pointer-events: none;
}

.ctaContent {
  position: relative;
  z-index: 10;
}

.ctaText {
  color: #FEFEFE;
  font-family: Garet, sans-serif;
  font-size: 1.4rem;
  letter-spacing: 0.05em;
  font-weight: 400;
  line-height: 1.5;
  text-transform: uppercase;
  margin-bottom: 24px;
}

.ctaSecondary {
  color: #FEFEFE;
  font-weight: 400;
}

.ctaHighlight {
  font-weight: 700;
  background-color: #3B3B3A;
  color: #FEFEFE;
  padding: 12px 20px;
  border-radius: 12px;
  display: inline-block;
  box-shadow: 0 8px 24px rgba(59, 59, 58, 0.3);
  border: 1px solid rgba(0, 0, 0, 0.2);
}

.ctaButton {
  padding: 18px 48px;
  border-radius: 12px;
  background: #FEFEFE;
  color: #3B3B3A;
  border: 2px solid #FEFEFE;
  font-family: Garet, sans-serif;
  font-size: 1rem;
  font-weight: 700;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  box-shadow: 0 12px 32px rgba(254, 254, 254, 0.25), 0 4px 12px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.ctaButton::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.ctaButton:hover::before {
  left: 100%;
}

.ctaButton:hover {
  background: #444e55;
  color: #FEFEFE;
  box-shadow: 0 15px 35px rgba(68, 78, 85, 0.5), 0 5px 15px rgba(0, 0, 0, 0.2);
  border: 2px solid #444e55;
  transform: translateY(-2px) scale(1.02);
}

/* Мобильная адаптация */
@media (max-width: 768px) {
  .section {
    padding: 60px 0;
  }
  
  .container {
    padding: 0 16px;
  }
  
  .title {
    font-size: 1.8rem;
    margin-bottom: 16px;
    line-height: 1.2;
    white-space: normal;
  }
  
  .subtitle {
    font-size: 0.9rem;
    white-space: normal;
  }
  
  .header {
    margin-bottom: 40px;
  }
  
  .tabs {
    flex-direction: column;
    gap: 2px;
  }
  
  .tab {
    padding: 20px 16px;
  }
  
  .tabTitle {
    font-size: 0.8rem;
  }
  
  .tabSubtitle {
    font-size: 0.7rem;
  }
  
  .portfolioGrid,
  .beforeAfterGrid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .beforeAfterItem {
    max-width: 280px;
  }
  
  .ctaText {
    font-size: 1.2rem;
  }
  
  .ctaBox {
    padding: 36px 24px;
  }
  
  .ctaButton {
    padding: 16px 32px;
    font-size: 0.9rem;
    font-weight: 700;
  }
}